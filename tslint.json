{
    "extends": "tslint:recommended",
    "rules": {
        "arrow-parens": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "semicolon": false,
        "space-before-function-paren": true,
        "interface-name": false,
        "no-console": [
            true,
            "log",
            "error"
        ],
        "ordered-imports": false,
        "forin": false,
        "object-literal-sort-keys": false,
        "member-ordering": false,
        "max-classes-per-file": false,
        "max-line-length": { "options": 140 },
        "variable-name": [true, "ban-keywords", "check-format",  "allow-leading-underscore", "allow-trailing-underscore", "allow-pascal-case", "allow-snake-case"]
    }
}