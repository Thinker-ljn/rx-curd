{
  "exclude": [ "node_modules" ],
  "compilerOptions": {
    "outDir": "dist",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declaration": true,
    "lib": [ "es6", "dom" ],
    "module": "es6",
    "jsx": "preserve",
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src"]
    },
    "plugins": [
      { 
        "name": "typescript-tslint-plugin", 
        "configFile": "./tslint.json"
      }
    ]
  }
}
